    "editor.formatOnSave": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        120
    ],
    "files.insertFinalNewline": true,
    "markdownlint.config": {
        "no-inline-html": {
            "allowed_elements": [
                "img"
            ]
        }
    },
    "cSpell.words": [
        "Calibri",
        "Codeberg",
        "fontsize",
        "frontends",
        "Gitea",
        "mainfont",
        "Orter",
        "pryorj",
        "xelatex",
        "xkcd"
    ]
}
